
<div class="page-header">
  <h1>
    Members
    <a href="/members/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-lg-12">
    <input type="text" id="quicksearch" placeholder="Search Members (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @members.each do |member| %>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= member.name %> (#<%= member.id %>)</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
              
              <strong>Organization: </strong>
              <%= member.organization %><br>

              <strong>Image: </strong>
              <%= member.image %><br>

              <strong>Position: </strong>
              <%= member.position %><br>

            <div class="btn-group btn-group-justified">
              <a href="/members/<%= member.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/members/<%= member.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_member/<%= member.id %>" class="btn btn-danger">
                <i class="fa fa-trash"></i>
              </a> 

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render('shared/quick_search_js') %>
